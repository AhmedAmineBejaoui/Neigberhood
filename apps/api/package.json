{
  "name": "@neighborhood-hub/api",
  "version": "1.0.0",
  "description": "Express API with Clean Architecture for Neighborhood Hub",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@neighborhood-hub/types": "workspace:*",
    "@prisma/client": "^5.7.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "rate-limiter-flexible": "^7.2.0",
    "redis": "^4.6.10",
    "zod": "^3.22.4",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "eslint": "^8.54.0",
    "prisma": "^5.7.0",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2"
  }
}
